<div class="contenedorContacto animate__animated animate__zoomIn ">


    <div id="contactXcuatro">
        <div id="uno"><i class="fas fa-fax fa-8x " style="color:white;"></i>fax-555-333</div>
        <div id="dos"><i class="fas fa-envelope fa-8x" style="color:white;"></i>contacto@imal.com</div>
        <div id="tres"><i class="fas fa-home fa-8x " style="color:white;"></i>Murillo 696</div>
        <div id="cuatro"><i class="fas fa-phone-square fa-8x " style="color:white;"></i>4-555-1111</div>

    </div>

    <!--aca va la ruta y el verbo http-->
    <form class="formContact " action="/contact" method="POST">
        <h4 class="text-white">Completa el formulario y nos comunicaremos.</h4>
        <!--mensaje de error de la valizacion del backend con hbs-->

        
           
       


        <label for="name">Nombre</label>
        <!--"hidden"no renderiza el label-->
        <input class="inputContact p-1 " type="text" id="name" name="name" autofocus {{#if formData.name }}
            value="{{formData.name}}" {{/if}}  placeholder="  {{arrWarnig.name.msg}}">


        <label for="lastName">Apellido</label>
        <input class="inputContact p-1" type="text" id="lastName" name="lastName" {{#if formData.lastName }}
            value="{{formData.lastName}}" {{/if}} placeholder="  {{arrWarnig.lastName.msg}}">


        <label for="email">Correo electr√≥nico</label>
        <input class="inputContact p-1" type="text" name="email" id="email" {{#if formData.email }}
            value="{{formData.email}}" {{/if}} placeholder="  {{arrWarnig.email.msg}}">


        <label for="message">Ingrese mensaje</label>
        <!--textarea no tiene propiedad "value"-->
        <textarea class="texteareaLogin " name="message" id="message" cols="30" rows="10"
           placeholder="{{arrWarnig.message.msg}}" >{{formData.message }}</textarea>

            

        <p class="text-white mt-1">{{statusMessage}}</p>




        <input type="submit" value="enviar" class="btn btn-primary">
        
    </form>



</div>