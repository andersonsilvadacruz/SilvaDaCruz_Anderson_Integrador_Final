<div class="container-fluid" class="col-xs-12 col-sm-6 col-md-8 col" class="divLogin ">

    <form class="formLogin animate__animated animate__zoomIn" action="login" method="POST">
        <h2 class="text-white">Iniciar sesión</h2>
        <label for="user">Usuario</label>
        <input class="inputLogin" name="user" type="text" id="user" autocomplete="username" />

        <label for="pass">Contraseña</label>
        <input class="inputLogin" name="pass" type="password" id="pass" autocomplete="current-password" />

        {{!-- mensajes de errror --}}
        {{#if message}}
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img"
                aria-label="Warning:">
                <path
                    d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z">
                </path>
            </svg>
            <div>
                {{message}}
            </div>
        </div>
        {{/if}}

        <br><button type="submit" class="btn btn-primary">enviar</button>
    </form>
</div>